<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_tran_2_20ff"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:singleLine="true"
        android:textSize="16sp"
        android:textColor="@color/white_f9"
        android:layout_toLeftOf="@+id/img_down"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_ablum"
        android:layout_below="@+id/tv_name"
        android:textSize="14sp"
        android:textColor="@color/cd"
        android:layout_toLeftOf="@+id/img_down"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_singer"
        android:layout_below="@+id/tv_ablum"
        android:textSize="14sp"
        android:textColor="@color/cd"
        android:layout_toLeftOf="@+id/img_down"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_size"
        android:layout_below="@+id/tv_singer"
        android:textSize="14sp"
        android:textColor="@color/cd"
        android:layout_toLeftOf="@+id/img_down"
        android:layout_marginTop="3dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_down"
        android:layout_centerVertical="true"
        android:src="@mipmap/download"
        android:scaleType="centerInside"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        />

</RelativeLayout>
